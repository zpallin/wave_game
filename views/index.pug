doctype html
html(lang="en")
  head
    title=title
    link(rel='stylesheet', href='/css/style.css', type='text/css')
  body
    div#container
      h1=title
      canvas#myCanvas(width=600,height=500)
    div(style='display:none;')
      img(src='/img/sand.jpg')
      img(src='/img/water.jpg')
      img(src='/img/hermit_idle_down.png')
      img(src='/img/hermit_idle_right.png')
      img(src='/img/hermit_walk_right.png')
      img(src='/img/hermit_walk_down.png')
      img(src='/img/hermit_walk_left.png')
      img(src='/img/hermit_walk_up.png')
      img(src='/img/hermit_burrow.png')
    script#worldWidth=worldSize.x
    script#worldHeight=worldSize.y
    script(src='/socket.io/socket.io.js')
    script(src='/js/globals.js')
    script(src='/js/helpers.js')
    script(src='/js/keys.js')
    script(src='/js/render.js')
    script(src='/js/entity.js')
    script(src='/js/world.js')
    script(src='/js/water.js')
    script(src='/js/fog.js')
